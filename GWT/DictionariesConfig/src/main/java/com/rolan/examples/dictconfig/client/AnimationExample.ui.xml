<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .border {
            border: 1px solid #bbb;
            border-bottom: 1px solid #a0a0a0;
            border-radius: 3px;
        }
    </ui:style>
    <g:FlowPanel addStyleNames="{style.border}">
        <g:Label text="Animation panel:"/>
        <g:Button ui:field="startAnimation" text="Start"/>
        <g:FlowPanel>
            <g:Label ui:field="animationLabel" text=" "/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>