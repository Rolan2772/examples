<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.rolan.examples.editor.client.FirstEditor.Style">
        .vertical {
            display: block;
        }
    </ui:style>

    <ui:style field="local">
        .padding {
            padding: 5px;
        }
        .label {
            text-align: right;
        }
        .horizontal {
            float: left;
        }
    </ui:style>

    <g:FlowPanel ui:field="mainPanel">
        <g:FlowPanel>
            <g:Label text="ID: " addStyleNames="{local.label} {local.horizontal}"/>
            <g:Label ui:field="id" addStyleNames="{local.padding}"/>
        </g:FlowPanel>
        <g:FlowPanel>
            <g:Label text="Name: " addStyleNames="{local.label} {local.horizontal}"/>
            <g:TextBox ui:field="name" addStyleNames="{local.padding}"/>
        </g:FlowPanel>
        <g:FlowPanel>
            <g:Label text="Position: " addStyleNames="{local.label} {local.horizontal}"/>
            <g:TextBox ui:field="position" addStyleNames="{local.padding}"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>