<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .label {
            float: left;
            width: 75px;
            text-align: right;
            margin-right: 5px;
        }
        .vertical {
            display: block;
        }
    </ui:style>
    <g:FlowPanel>
        <g:FlowPanel>
            <g:Label text="City: " addStyleNames="{style.label}"/>
            <g:TextBox ui:field="city"/>
        </g:FlowPanel>
        <g:FlowPanel>
            <g:Label text="Address: " addStyleNames="{style.label}"/>
            <g:TextBox ui:field="address"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>